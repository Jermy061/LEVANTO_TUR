// ----------------------------------------------------------------------------------
// PROYECTO: LEVANTO CONECTA (SISTEMA DE CATÁLOGO CENTRALIZADO)
// BASE DE DATOS: MariaDB / MySQL
// ----------------------------------------------------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==================================================================================
//                              I. ENUMERACIONES
// ==================================================================================

enum UserRole {
  ADMIN
  TENANT
}

enum BusinessType {
  ACCOMMODATION
  RESTAURANT
  TRANSPORT
  LOCAL_PRODUCT
  TOUR_AGENCY
}

// ==================================================================================
//                        II. MODELOS CENTRALES
// ==================================================================================

// 1. User: Autenticación para ADMINS y TENANTS
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  name      String   @db.VarChar(255)
  role      UserRole
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @updatedAt @db.DateTime(0)

  // Relación con Tenant (un usuario puede ser un tenant)
  tenantId Int?    @unique
  tenant   Tenant? @relation(fields: [tenantId], references: [id])
}

// 2. Tenant: Representa a un dueño de negocio
model Tenant {
  id             Int           @id @default(autoincrement())
  nombre_empresa String        @db.VarChar(255)
  subdominio     String        @unique @db.VarChar(100)
  contactPhone   String?       @db.VarChar(50)
  businessType   BusinessType?
  isApproved     Boolean       @default(false)
  isPublished    Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relación inversa con User (un tenant tiene una cuenta de usuario)
  user User?

  // Relaciones con los negocios que posee
  accommodations          Accommodation[]
  restaurants             Restaurant[]
  transportationCompanies TransportationCompany[]
  localProducts           LocalProduct[]
}

// ==================================================================================
//                      III. MODELOS DE TURISMO (GESTIÓN MUNICIPAL Y TENANTS)
// ==================================================================================

// Contenido Turístico Fijo (Gestionado por la Municipalidad)
model TouristicPlace {
  id           Int     @id @default(autoincrement())
  name         String  @unique @db.VarChar(255)
  description  String  @db.Text
  history      String? @db.LongText
  mainImageUrl String  @db.VarChar(2048)
  latitude     Float?
  longitude    Float?

  @@map("touristic_places")
}

// Hoteles/Hospedajes (Gestionado por Tenants)
model Accommodation {
  id            Int      @id @default(autoincrement())
  title         String   @db.VarChar(255)
  description   String?  @db.Text
  pricePerNight Decimal? @db.Decimal(10, 2)
  imageUrl      String   @db.VarChar(2048)
  isPublished   Boolean  @default(false)
  contactPhone  String?  @db.VarChar(50)
  email_public  String?  @db.VarChar(255)
  latitude      Float?
  longitude     Float?

  // Relación con Tenant
  tenantId Int
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  @@map("accommodations")
}

// Restaurantes (Gestionado por Tenants)
model Restaurant {
  id                Int     @id @default(autoincrement())
  title             String  @db.VarChar(255)
  specialty         String? @db.VarChar(255)
  averagePriceRange String? @db.VarChar(20)
  isPublished       Boolean @default(false)
  contactPhone      String? @db.VarChar(50)
  email_public      String? @db.VarChar(255)
  latitude          Float?
  longitude         Float?

  // Relación con Tenant
  tenantId Int
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  @@map("restaurants")
}

// Transporte (Gestionado por Tenants)
model TransportationCompany {
  id           Int      @id @default(autoincrement())
  serviceName  String   @db.VarChar(255)
  route        String   @db.VarChar(255)
  fare         Decimal? @db.Decimal(10, 2)
  vehicleType  String?  @db.VarChar(50)
  isPublished  Boolean  @default(false)
  contactPhone String?  @db.VarChar(50)
  email_public String?  @db.VarChar(255)
  latitude     Float?
  longitude    Float?

  // Relación con Tenant
  tenantId Int
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  @@map("transportation_companies")
}

// Productos Locales (Gestionado por Tenants)
model LocalProduct {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(255)
  productType  String?  @db.VarChar(100)
  description  String?  @db.Text
  price        Decimal? @db.Decimal(10, 2)
  imageUrl     String   @db.VarChar(2048)
  isPublished  Boolean  @default(false)
  contactPhone String?  @db.VarChar(50)
  email_public String?  @db.VarChar(255)
  latitude     Float?
  longitude    Float?

  // Relación con Tenant
  tenantId Int
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  @@map("local_products")
}
